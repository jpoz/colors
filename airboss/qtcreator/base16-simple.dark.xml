<?xml version="1.0" encoding="UTF-8"?>
<style-scheme version="1.0" name="Base 16 Simple Dark">

  <!-- main colors, skipping one of attributes (backgroud/foreground) will use color from here -->
  <style name="Text" foreground="#aebabf" background="#242728"/>

  <!-- it will be underlined by default -->
  <style name="Link"/>

  <!-- selection, current line, search, matching brackets -->
  <style name="Selection" background="#768993"/>
  <style name="CurrentLine" background="#526068"/>
  <style name="LineNumber" foreground="#526068"/>
  <style name="CurrentLineNumber" foreground="#768993" bold="true"/>
  <style name="SearchResult" background="30383b"/>
  <style name="Parentheses" background="#3c474c" />

  <!-- Selection whilst searching in it -->
  <style name="SearchScope" foreground="#f6f8f8" background="#526068"/>

  <!-- word (symbol) under cursor: background - color of marking frame, foreground - ignored -->
  <style name="Occurrences" background="#526068"/>
  <style name="Occurrences.Rename" background="#768993"/>
  <!-- unused variable: foreground - color of underlining -->
  <style name="Occurrences.Unused" foreground="#F1A74F"/>

  <!-- language primitives -->
  <style name="Number" foreground="#F1A74F"/>
  <style name="String" foreground="#93D4AC"/>
  <style name="Keyword" foreground="#9581AD"/>
  <style name="Operator" foreground="#aebabf"/>
  <style name="Preprocessor" foreground="#43A9CF"/>
  <style name="Label" foreground="#E87364"/>

  <!-- types, classes -->
  <style name="Type" foreground="#F8D0A0"/>

  <!-- functions, methods -->
  <style name="Function" foreground="#43A9CF"/>
  <style name="VirtualMethod" foreground="#43A9CF" italic="true"/>

  <!-- variables -->
  <style name="Field" foreground="#e8e8e8"/>
  <style name="Local" foreground="#aebabf"/>
  <style name="Static" foreground="#aebabf"/>
  <style name="JsScopeVar" foreground="#aebabf" italic="true"/>
  <style name="JsImportVar" foreground="#aebabf" italic="true"/>
  <style name="JsGlobalVar" foreground="#aebabf" italic="true"/>

  <!-- whitespace -->
  <style name="VisualWhitespace" foreground="#3c474c"/>

  <!-- comments -->
  <style name="Comment" foreground="#526068"/>
  <style name="DisabledCode" foreground="#526068"/>
  <style name="Doxygen.Comment" foreground="#526068"/>
  <style name="Doxygen.Tag" foreground="#526068"/>

  <!-- QML -->
  <style name="QmlTypeId" foreground="#9581AD"/>
  <style name="Binding" foreground="#E87364"/>
  <style name="QmlExternalId" foreground="#43A9CF" italic="true"/>
  <style name="QmlExternalObjectProperty" foreground="#43A9CF" italic="true"/>
  <style name="QmlLocalId" italic="true"/>
  <style name="QmlRootObjectProperty" italic="true"/>
  <style name="QmlScopeObjectProperty" italic="true"/>
  <style name="QmlStateName" italic="true"/>

  <!-- inline diff -->
  <style name="DiffFile" foreground="#9581AD"/>
  <style name="DiffLocation" foreground="#43A9CF"/>
  <style name="AddedLine" foreground="#93D4AC"/>
  <style name="RemovedLine" foreground="#F8D0A0"/>

  <!-- side-by-side diff -->
  <style name="DiffFileLine" foreground="#9581AD"/>
  <style name="DiffContextLine" foreground="#43A9CF"/>
  <style name="DiffSourceLine" foreground="#93D4AC"/>
  <style name="DiffSourceChar" foreground="#F8D0A0" background="#30383b"/>
  <style name="DiffDestLine" foreground="#93D4AC"/>
  <style name="DiffDestChar" foreground="#F8D0A0" background="#30383b"/>
</style-scheme>
